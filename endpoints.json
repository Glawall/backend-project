{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, or articles by topic query",
    "queries": ["topic"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of an article by the article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments based on article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "author": "weegembump",
          "body": "Text from the comment..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_id": 1,
          "comment_id": 6
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "POSTS a comment on an article based on an article_id",
    "queries": [],
    "exampleResponse": {
      "posted comment": {
        "author": "weegembump",
        "body": "Text from the comment..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_id": 1,
        "comment_id": 6
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a commentbased on an comment_id",
    "queries": [],
    "exampleResponse": 204
  },
  "GET /api/users": {
    "description": "serves an array of user objects",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "username": "rogersop",
          "name": "paul",
          "avatar_url": "'https://avatars2.githubusercontent.com/u/24394918?s=400&v=4'"
        }
      ]
    }
  }
}
